  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/hadealahmad/MonthlyQuran/issues"
  },
  "homepage": "https://github.com/hadealahmad/MonthlyQuran#readme",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5"
  }
}
